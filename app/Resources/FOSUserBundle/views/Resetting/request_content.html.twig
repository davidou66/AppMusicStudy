<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
    {% if invalid_username is defined %}
        <p class="alert alert-warning">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</p>
    {% endif %}
    <div class="form-group wow fadeInRight" data-wow-delay="0.2s">
        <label for="username">{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}</label>
        <input class="form-control" type="text" id="username" name="username" required="required" />
    </div>
    <div class="form-group">
        <input class="hvr-grow button full-blue wow zoomIn" data-wow-delay="1s" type="submit" value="{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}" />
    </div>

    <a class="back-to wow fadeInRight" data-wow-delay="0.5s" href="{{ path('fos_user_security_login') }}">
        <i class="fa fa-arrow-left icon left" aria-hidden="true"></i>{{ 'registration.back'|trans({}, 'FOSUserBundle') }}
    </a>
</form>
