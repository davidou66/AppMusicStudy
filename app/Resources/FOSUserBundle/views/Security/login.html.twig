{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    {% if error %}
        <div class="alert alert-warning">
            {{ error|trans({}, 'FOSUserBundle') }}
            <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">&times;</a>
        </div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post" class="login-form">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <div class="form-group wow fadeInRight" data-wow-delay="0.2s" id="log">
            <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
        </div>

        <div class="form-group wow fadeInRight" data-wow-delay="0.5s" id="mdp">
            <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
            <input class="form-control" type="password" id="password" name="_password" required="required" />

            <small class="forget-password"><a href="{{ path('fos_user_resetting_request') }}">{{ 'Forgot your password ?'|trans({}, 'messages') }}</a></small>
        </div>

        <div class="form-group input-container no-select wow fadeInRight" data-wow-delay="1s">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
        </div>

        <input class="hvr-grow button full-blue wow zoomIn" data-wow-delay="1s" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
    </form>
{% endblock fos_user_content %}
